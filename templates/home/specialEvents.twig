{% for event in events %}
    <div class="relative z-30 mb-5 top-24 lg:w-72 block p-5  rounded-xl border border-solid border-black bg-amber-400 shadow-xl" id="special">

    {# <div class="w-72 sm:w-96 p-5 m-auto mt-5 rounded-xl border border-solid border-black bg-amber-400" id='special'> #}
    <h1 class='text-3xl font-bold text-center'> {{ event.specialeventdate | date_format("d. F Y") }}</h1><br>
    <h1 class='text-3xl font-bold text-center italic'>Spezial Abend:</h1>
    <h1 class='text-3xl font-bold text-center'> {{ event.specialeventtitle }}</h1>

    {% if event.flyer != NULL %}
        <p><img src='img/specialevents/{{ event.flyer }}' class='w-96 text-center'></p>
    {%  endif %}

    <p class='text.left'>{{ event.descripttext }}</p>
    </div>
{% endfor %}